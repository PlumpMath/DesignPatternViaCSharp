<leg:level id="UCPN.OL.CLAN02.PT6"><leg:level-vrnt leveltype="part" searchtype="LEGISLATION PART" subdoc="false" toc-caption="PART 6 INTOXICATION [ss 47&#x2013;50]">
<leg:levelinfo>
