<leg:level id="UCPN.OL.DAN05.PT4.D1"><leg:level-vrnt leveltype="division" searchtype="LEGISLATION DIVISION" subdoc="false" toc-caption="DIVISION 1 GENERAL [ss 21&#x2013;23]">
<leg:heading><desig searchtype="DIV-NUM"><designum><refpt id="UCPN.OL.DAN05.PT4.D1" type="ext"/>DIVISION 1</designum></desig><title searchtype="DIV-TITLE">GENERAL [ss 21&#x2013;23]</title></leg:heading>
