<leg:level id="UCPN.UCPR.UCPRN05.PT28.D3"><leg:level-vrnt leveltype="division" searchtype="LEGISLATION DIVISION" subdoc="false" toc-caption="DIVISION 3  CONSOLIDATION ETC OF PROCEEDINGS [r 28.5]">
