<leg:level id="UCPN.OL.CRA.S2.1"><leg:level-vrnt leveltype="subsect" searchtype="LEGISLATION SUBSECT">
<leg:levelinfo>
<leg:levelstatus isrepealed="false" ln.user-displayed="false"/></leg:levelinfo>
<leg:heading inline="true"><desig><designum><refpt id="UCPN.OL.CRA.S2.1" type="ext"/>(1)</designum></desig></leg:heading>
<leg:levelbody>
<leg:bodytext>
